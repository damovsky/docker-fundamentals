# installation

sudo curl -L https://github.com/docker/machine/releases/download/v0.2.0/docker-machine_darwin-amd64 > /usr/local/bin/docker-machine
sudo chmod +x /usr/local/bin/docker-machine

docker-machine -v


docker-machine create --driver digitalocean --digitalocean-access-token TOKEN name

